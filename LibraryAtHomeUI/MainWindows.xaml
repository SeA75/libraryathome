                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
        </DockPanel>



        <DockPanel HorizontalAlignment="Left" Margin="0,50">
            <StackPanel Margin="5,0">
                <!--Filter area-->
                <GroupBox Header="Active Filters" Width="200" Height="200" >

                </GroupBox>

                <Label HorizontalAlignment="Center" Content="FILTERS"/>
                <ComboBox  x:Name="cbPublishers"  Text="Publishers" IsEditable="True" IsReadOnly="True"/>
                <Separator Width="20" Background="Transparent"/>
                <ComboBox  x:Name="cbAuthors"  Text="Authors" IsEditable="True" IsReadOnly="True">
                    <ComboBoxItem Content="Asimov"/>
                    <ComboBoxItem Content="Dante"/>
                </ComboBox>
                <Separator Width="20" Background="Transparent"/>
                <ComboBox  x:Name="cbLanguages"  Text="Languages" IsEditable="True" IsReadOnly="True">
                    <ComboBoxItem Content="Eng"/>
                    <ComboBoxItem Content="Ita"/>
                </ComboBox>

                <Separator Width="20" Background="Transparent"/>
                <ComboBox  x:Name="cbReliability"  Text="Reliability" IsEditable="True" IsReadOnly="True"/>
                <Separator Width="20" Background="Transparent"/>
                <ComboBox  x:Name="cbSubjects"  Text="Subjects" IsEditable="True" IsReadOnly="True"/>

            </StackPanel>
        </DockPanel >

        <DockPanel HorizontalAlignment="Right"  Margin="0,50">
            <StackPanel Width="988" >

                <TextBox x:Name="tbFilters" Text="Filters" IsEnabled="True" IsReadOnly="False" HorizontalAlignment="Center" BorderThickness="3" Width="388"/>
                <DockPanel HorizontalAlignment="Right">
                    <Button x:Name="btnGallery" Width="50" HorizontalAlignment="Center" Content="Gallery" />
                    <Button x:Name="btnList" Width="50" HorizontalAlignment="Right" Content="List"/>
                </DockPanel>

                <ListView ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="true" Margin="10,0" BorderThickness="0">
                    <ListView  Name="lvBooks">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Title" Width="450" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Header="Authors" Width="200" DisplayMemberBinding="{Binding Age}" />
                                <GridViewColumn Header="Subjects" Width="100" DisplayMemberBinding="{Binding Mail}" />
                                <GridViewColumn Header="Language" Width="80" DisplayMemberBinding="{Binding Mail}" />
                                <GridViewColumn Header="Publisher" Width="80" DisplayMemberBinding="{Binding Mail}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                </ListView>
            </StackPanel>

        </DockPanel>


