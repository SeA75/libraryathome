<Window x:Class="LibraryAtHomeUI.BookDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryAtHomeUI"
        mc:Ignorable="d"
        Title="BookDetails" Height="376" Width="800" >
    <Grid Margin="0,0,0,0" >
        <StackPanel VerticalAlignment="Center" Height="287">
            <DockPanel Height="118">
                <Image x:Name="imgBook"  Source="Images/google.png" Width="100" Height="100" HorizontalAlignment="Right"/>
                <Button x:Name="btnBookDetailsEditBook"  Width="90" Height="90" Content="Edit Book"/>

                <StackPanel Width="500">
                    <RichTextBox x:Name="rtbBookDetailsTitle" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="0">
                        <FlowDocument>
                            <Paragraph FontSize="25">
                                <Bold>
                                    <Run Text="I am the Title. Would you like to edit me?"/>
                                </Bold>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Column="0">
                            <StackPanel>
                                <RichTextBox x:Name="rtbBookDetailsAuthors" HorizontalAlignment="Left" Width="100" Height="15" BorderThickness="0">
                                    <FlowDocument>
                                        <Paragraph FontSize="10">
                                            <Run Text="Author1"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>

                                <RichTextBox x:Name="rtbBookDetailsPublisher" HorizontalAlignment="Left" Width="100" Height="15" BorderThickness="0">
                                    <FlowDocument>
                                        <Paragraph FontSize="10">
                                            <Run Text="Publisher"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </StackPanel>
                        </DockPanel>

                        <DockPanel Grid.Column="1" HorizontalAlignment="Left" Width="100">

                            <StackPanel>

                                <RichTextBox x:Name="rtbBookDetailslanguage" HorizontalAlignment="Left" Width="100" Height="15" BorderThickness="0">
                                    <FlowDocument>
                                        <Paragraph FontSize="10">
                                            <Run Text="Language"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>

                                <RichTextBox x:Name="rtbBookDetailsSubjects" HorizontalAlignment="Left" Width="100" Height="15" BorderThickness="0">
                                    <FlowDocument>
                                        <Paragraph FontSize="10">
                                            <Run Text="Subjects"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>

                                <RichTextBox x:Name="rtbBookDetailsPublicationDate" HorizontalAlignment="Left" Width="100" Height="15" BorderThickness="0">
                                    <FlowDocument>
                                        <Paragraph FontSize="10">
                                            <Run Text="PublicationDate"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </StackPanel>

                        </DockPanel>

                    </Grid>



                </StackPanel>
                <Button x:Name="btnBookDdetailRead" Width="90" Height="90" Content="Read Book"/>

            </DockPanel>
            <Separator Height="10" Background="Black"/>

            <!--<StackPanel Orientation="Vertical" Width="400" >-->

